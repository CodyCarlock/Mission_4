@{ 
    ViewData["Title"] = "Movies";
}

@model List<applicationResponse>

<h2 class="text-center">My awesome movie collection</h2>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Movie Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                    <td>@movie.CategoryId</td>
                    @*<td>@movie.Categories.CategoryId</td>        Will not populate the name of category. Tried debugging with prof Hilton and couldn't figure out. Left the categoryId in since rubric does not require category name to be displayed in table'*@ 
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Edited</td>
                    <td>@movie.Notes</td>                          <!--Every row is given an id of the MovieId-->
                    <td><a class="btn btn-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@movie.MovieId">Edit</a></td>
                    <td><a class="btn btn-dark" asp-controller="Home" asp-action="Delete" asp-route-id="@movie.MovieId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>

