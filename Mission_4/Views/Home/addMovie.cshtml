@*
*@
@{
    ViewData["Title"] = "Add_Movie";
}

@model Mission4.Models.applicationResponse;



<h1>Enter in a Movie</h1>

<!--Form to input movie information-->
<div>
    <form method="post"  class="form-group">
        <!--To print any errors in the entry-->
        <div asp-validation-summary="All"></div>

        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
        <option value="">Select Category</option>
        
            <!--Creating a drop down populated by instances of the category table-->
            @foreach(Mission_4.Models.Categories c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Name">Movie Title</label>
        <input asp-for="Name" /><br />

        <label asp-for="Year">Year</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select> <br />

        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select> <br />

        <label asp-for="Lent_To">Lent To</label>
        <input asp-for="Lent_To" /><br />

        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" maxlength="25" /> <br />

        <button class="btn-primary" type="submit">Submit</button>
    </form>
</div>