
@{
    ViewData["Title"] = "Delete Movie";
}

@model applicationResponse

<h2>Confirm Deletion </h2>
<h3>Are you sure you want to delete @Model.Name</h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-controller="Home" asp-action="movieTable" class="btn btn-dark">Cancel</a>
   
    <!--To bring in the movie info-->
    <input type="hidden" asp-for="MovieId"/>

</form>